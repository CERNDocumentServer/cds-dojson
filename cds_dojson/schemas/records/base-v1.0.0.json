{
  "title": "CDS Base Record Schema v1.0.0",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "agency_code": {
      "type": "string"
    },
    "original_source": {
      "type": "string"
    },
    "report_number": {
      "type": "array",
        "items": {
          "type": "string"
        }
    },
    "recid": {
      "description": "Invenio record identifier (integer).",
      "type": "integer"
    },
    "doi": {
      "description": "Record DOI identifier (string).",
      "type": "string"
    },
    "_access": {
      "type": "object",
      "properties": {
        "update": {
          "type": "array",
          "items": {
            "type": "string",
             "title": "Update"
          }
        },
        "read": {
          "type": "array",
          "items": {
            "type": "string",
             "title": "Read"
          }
        }
      }
    },
    "_deposit": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "created_by": {
          "type": "integer"
        },
        "owners": {
          "name": "owners",
          "title": "Owners",
          "type": "array",
          "description": "Owners of the record (a list of user's IDs).",
          "items": {
            "type": "integer"
          }
        }
      }
    },
    "_oai": {
      "description": "OAI-PMH specific information.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "description": "OAI-PMH record identifier.",
          "type": "string"
        },
        "sets": {
          "description": "OAI-PMH sets for record.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "updated": {
          "description": "Last OAI-PMH set update (ISO8601 formatted timestamp)",
          "type": "string"
        }
      }
    },
    "category": {
      "description": "Category of the project.",
      "type": "string"
    },
    "type": {
      "description": "Type of the project.",
      "type": "string"
    },
    "publication_date": {
      "title": "Publication date",
      "description": "When the record is published",
      "type": "string",
      "format" : "date-time"
    }
  },
  "required": ["recid"]
}
