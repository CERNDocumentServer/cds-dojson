{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    { "$ref": "../../base-v1.0.0.json" },
    {
      "properties": {
        "title": { "$ref": "../../definitions-v1.0.0.json#/definitions/title" },
        "keywords": { "$ref": "../../definitions-v1.0.0.json#/definitions/keywords" },
        "description": { "$ref": "../../definitions-v1.0.0.json#/definitions/description" },
        "translations": {
          "type": "array",
          "items": {
            "type": "object",
            "allOf": [
              {
                "properties": {
                  "title": {
                    "$ref": "../../definitions-v1.0.0.json#/definitions/title"
                  },
                  "description": {
                    "$ref": "../../definitions-v1.0.0.json#/definitions/description"
                  },
                  "language": {
                    "$ref": "../../definitions-v1.0.0.json#/definitions/language"
                  }
                }
              }
            ]
          }
        },
        "_deposit": {
          "type": "object",
          "properties": {
            "pid": {
              "type": "object",
              "properties": {
                "revision_id": {
                  "type": "integer"
                },
                "type": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                }
              }
            },
            "owners": {
              "items": {
                "type": "integer"
              },
              "title": "Owners",
              "type": "array",
              "description": "Owners of the record (a list of user's IDs).",
              "name": "owners"
            },
            "status": {
              "enum": [
                "published",
                "draft"
              ],
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "created_by": {
              "type": "integer"
            }
          }
        },
        "contributors": {
          "type": "array",
          "minItems": 1,
          "items": {
            "allOf": [
              {"$ref": "../../definitions-v1.0.0.json#/definitions/contributor"},
              {
                "properties": {
                  "role": {
                    "type": "string",
                    "enum": [
                      "Animations by",
                      "Camera Operator",
                      "Comments by",
                      "Co-Producer",
                      "Creator",
                      "Credits",
                      "Director",
                      "Editor",
                      "Music by",
                      "Narrator",
                      "Photography",
                      "Producer",
                      "Reporter",
                      "Screenwriter",
                      "Speaker",
                      "Translator"
                    ]
                  }
                }
              }
            ]
          }
        },
        "date": { "$ref": "../../definitions-v1.0.0.json#/definitions/date" },
        "copyright": { "$ref": "../../definitions-v1.0.0.json#/definitions/copyright" },
        "license": { "$ref": "../../definitions-v1.0.0.json#/definitions/license" },
        "related_links": { "$ref": "../../definitions-v1.0.0.json#/definitions/related_links" },
        "location": { "$ref": "../../definitions-v1.0.0.json#/definitions/location" },
        "physical_medium": { "$ref": "../../definitions-v1.0.0.json#/definitions/physical_medium" },
        "note": { "$ref": "../../definitions-v1.0.0.json#/definitions/note" },
        "internal_note": { "$ref": "../../definitions-v1.0.0.json#/definitions/internal_note" },
        "internal_categories": { "$ref": "../../definitions-v1.0.0.json#/definitions/internal_categories" },
        "subject": { "$ref": "../../definitions-v1.0.0.json#/definitions/subject" },
        "accelerator_experiment": { "$ref": "../../definitions-v1.0.0.json#/definitions/accelerator_experiment" },
        "external_system_identifiers": { "$ref": "../../definitions-v1.0.0.json#/definitions/external_system_identifiers" },
        "vr": {
          "type": "boolean"
        },
        "duration": {
          "type": "string"
        },
        "featured": {
          "type": "boolean"
        },
        "_files": {
          "items": {
            "type": "object",
            "description": "A file object described using some basic subfields. (Usually to be extended).",
            "properties": {
              "bucket_id": {
                "type": "string"
              },
              "checksum": {
                "type": "string"
              },
              "completed": {
                "type": "boolean"
              },
              "content_type": {
                "type": "string"
              },
              "context_type": {
                "enum": [
                  "frame",
                  "frames-preview",
                  "subtitle",
                  "master",
                  "subformat",
                  "playlist",
                  "poster"
                ],
                "type": "string"
              },
              "file_id": {
                "type": "string"
              },
              "frame": {
                "$ref": "../../definitions-v1.0.0.json#/definitions/_file"
              },
              "frames-preview": {
                "$ref": "../../definitions-v1.0.0.json#/definitions/_file"
              },
              "key": {
                "type": "string"
              },
              "media_type": {
                "type": "string"
              },
              "playlist": {
                "$ref": "../../definitions-v1.0.0.json#/definitions/_file"
              },
              "size": {
                "type": "integer"
              },
              "subformat": {
                "$ref": "../../definitions-v1.0.0.json#/definitions/_file"
              },
              "version_id": {
                "type": "string"
              }
            }
          },
          "type": "array"
        },
        "_project_id": {
          "type": "string"
        },
    "_cds": {
      "type": "object",
      "properties": {
        "state": {
          "type": "object",
          "properties": {
            "file_upload": {
              "enum": [
                "PENDING",
                "RECEIVED",
                "STARTED",
                "SUCCESS",
                "FAILURE",
                "REVOKED",
                "RETRY",
                "IGNORED",
                "REJECTED"
              ],
              "type": "string"
            },
            "file_download": {
              "enum": [
                "PENDING",
                "RECEIVED",
                "STARTED",
                "SUCCESS",
                "FAILURE",
                "REVOKED",
                "RETRY",
                "IGNORED",
                "REJECTED"
              ],
              "type": "string"
            },
            "file_transcode": {
              "enum": [
                "PENDING",
                "RECEIVED",
                "STARTED",
                "SUCCESS",
                "FAILURE",
                "REVOKED",
                "RETRY",
                "IGNORED",
                "REJECTED"
              ],
              "type": "string"
            },
            "file_video_extract_frames": {
              "enum": [
                "PENDING",
                "RECEIVED",
                "STARTED",
                "SUCCESS",
                "FAILURE",
                "REVOKED",
                "RETRY",
                "IGNORED",
                "REJECTED"
              ],
              "type": "string"
            },
            "file_video_metadata_extraction": {
              "enum": [
                "PENDING",
                "RECEIVED",
                "STARTED",
                "SUCCESS",
                "FAILURE",
                "REVOKED",
                "RETRY",
                "IGNORED",
                "REJECTED"
              ],
              "type": "string"
            }
          }
        },
        "modified_by": {
          "type": "integer"
        },
        "extracted_metadata": {
          "type": "object"
        }
      }
    },
    "category": {
          "description": "Category of the project.",
          "type": "string"
        },
        "type": {
          "description": "Type of the project.",
          "type": "string"
        },
        "language": {
          "$ref": "../../definitions-v1.0.0.json#/definitions/language"
        },
        "audio_characteristics": {
          "type": "object",
          "properties": {
            "playback_channels": {
              "type": "string"
            }
          }
        },
        "Press": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "category",
        "contributors",
        "copyright",
        "date",
        "description",
        "duration",
        "language",
        "license",
        "publication_date",
        "recid",
        "report_number",
        "title",
        "type"
      ]
    }
  ]
}
